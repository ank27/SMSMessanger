<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:id="@+id/coordinator_conversation"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarConversation"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/white"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                style="@style/Toolbar">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/progressConversation"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/appBarConversation"
            android:id="@+id/conversationLayout"
            android:paddingBottom="70dp"
            android:background="#e2e2e2"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/conversation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:background="#e2e2e2"
                android:alpha="0.87"
                android:dividerHeight="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical" >
            </ListView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="80dp">
        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/sms_edit_text"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:scrollHorizontally="false"
            android:maxLines="4"
            android:padding="10dp"
            android:hint="Type text here to send SMS (Eg. What's up)"
            android:singleLine="false"
            android:inputType="textCapSentences"
            style="@style/TextViewAppearanceMedium"
            android:textColor="#000000"
            android:paddingLeft="4dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_send"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send"
            app:backgroundTint="#ccc"
            app:borderWidth="2dp"
            app:fabSize="normal"
            app:rippleColor="@color/colorPrimary" />
        </RelativeLayout>
        </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>